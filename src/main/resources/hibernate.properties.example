# Needed by Hibernate3 Maven Plugin defined in pom.xml
hibernate.connection.username=${jdbc.username}
hibernate.connection.password=${jdbc.password}
hibernate.connection.url=${jdbc.url}
hibernate.connection.driver_class=${jdbc.driverClassName}
# hibernate.default_schema=${test.hibernate.default_schema}
hibernate.dialect=${hibernate.dialect}
hibernate.hbm2ddl.auto=${hibernate.hbm2ddl.auto}
hibernate.connection.autocommit=false
hibernate.jdbc.batch_size=50
hibernate.show_sql=false
#hibernate.connection.pool_size=1
hibernate.jdbc.use_scrollable_resultset=true
hibernate.jdbc.wrap_result_sets = true
#hibernate.statement_cache.size=0
#hibernate.dbcp.ps.maxIdle = 0
#hibernate.cache.use_second_level_cache=false


# C3P0 configurations
#Initial number of database connections
hibernate.c3p0.min_size=1
#Maximum number of database connections to open
hibernate.c3p0.max_size=32
#Number of connections in a clump acquired when pool is exhausted
hibernate.c3p0.acquire_increment=1
#Maximum size of c3p0 statement cache (0 to turn off)
hibernate.c3p0.max_statements=0
#Maximum idle time for a connection (in seconds)
hibernate.c3p0.timeout=0
#Idle time before a c3p0 pooled connection is validated (in seconds)
#Must be less than hibernate.c3p0.timeout
hibernate.c3p0.idle_test_period=600
#Validate the connection on checkout. Consider setting the hibernate.c3p0.idle_test_period property instead. Defaults to false
hibernate.c3p0.validate=false